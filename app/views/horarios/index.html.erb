<br>
<br>
 <center><h1>Horarios</h1></center>
   <%= form_tag request.path, :method => 'get' do %>
     Datos a Buscar:
   <div class="input-append">
     <%= search_field_tag :search, params[:search], options ={ :class=>"span2", :placeholder => "Horarios, ficha"} %>
     <%= submit_tag "Consultar", :class => "btn btn-info", :nombre => nil %>
   </div>
    <p>numero de registros:
  <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
   <%= hidden_field_tag :direction, params[:direction] %>
 <%= hidden_field_tag :sort, params[:sort] %>
   <% end %>
<br />

<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
    <th><%= sortable "id" %></th>
    <th><%= sortable "fecha", "Fecha" %></th>
    <th><%= sortable "hora", "Hora"  %></th>
    <th><%= sortable "aula", "Aula" %></th>
    <th><%= sortable "materia_nombre", "Materia"%></th>
    <th><%= sortable "instructor_nombre", "Instructor" %></th>
    <th><%= sortable "curso_nombre", "Curso" %></th>
    <th>Acciones</th>
    
              
    </tr>
  </thead>
  <tbody>
     <%= render @horarios %>
  </tbody>
  <tfoot>
    <tr>
      <th><%= link_to image_tag('horario.gif', :tile  => "Nuevo horario"),   new_horario_path, :remote => true %></th>
    </tr>
  </tfoot>
 <tfoot>
    <tr>
     <td>Total Horarios :<input type="text"  id="totalregs" class="span1" value="<%= @horarios.total_entries %>" readonly />
 </td>
    </tr>
  </tfoot>
</table>
</div>
<br />
<br />
<div align="center">
<%= will_paginate @horarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>

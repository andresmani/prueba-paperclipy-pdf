<tr id=<%= "curso_#{curso.id}" %>>
  <td><%= link_to curso.id, edit_curso_path(curso), :remote => true %></td>
    <td><%= curso.nombre %></td>
    <td> <%= curso.ficha %></td>

  


  <td>
    <%= link_to  image_tag('Lupa.gif', :title => "mostrar"), curso,     :remote => true, :class => 'btn btn-mini' %>
